let g:mapleader="\<Space>"
:nnoremap <Space> <Nop>
:xnoremap <Space> <Nop>
set number
set relativenumber
set hlsearch

" config keymaps
:nnoremap <BS> :nohl<CR>
" 系统剪切板相关按键配置
:nnoremap <leader>y "+y
:vnoremap <leader>y "+y
:nnoremap <leader>p "+p
:vnoremap <leader>p "+p
" File keybindings
" 保存文件快捷键
:nnoremap <leader>fs :w<CR>
" 保存所有文件快捷键
:nnoremap <leader>fS :wa<CR>
:nnoremap <leader>ff :vsc Edit.GoToFile<CR>
" 光标移动至左边window
:nnoremap <leader>wh <C-w>h
" 光标移动至下边window
:nnoremap <leader>wj <C-w>j
" 光标移动至上边window
:nnoremap <leader>wk <C-w>k
" 光标移动至右边window
:nnoremap <leader>wl <C-w>l
" 当前window移动至最左边，高度撑满屏幕
" nnoremap <leader>wH <C-w>H
" 当前window移动至最下边，宽度撑满屏幕
" nnoremap <leader>wJ <C-w>J
" 当前window移动至最上边，高度撑满屏幕
" nnoremap <leader>wK <C-w>K
" 当前window移动至最右边，宽度撑满屏幕
" nnoremap <leader>wL <C-w>L
" 按照当前布局所有window高宽平分
" nnoremap <leader>w= <C-w>=
" 按照当前布局所有window高宽平分
" nnoremap <leader>w= <C-w>=
" 水平分割新建一个window
:nnoremap <leader>ws :split<CR>
" 垂直分割新建一个window
:nnoremap <leader>wv :vsplit<CR>
" Delete current window(不回收当前文件buffer) :clo[se], <C-w>c
:nnoremap <leader>wd :q<CR>
" Delete Buffer and window
:nnoremap <leader>wx :bd<CR> 
" 关闭当前window外的所有window :on[ly]
" nnoremap <leader>wo <C-w>o
" End window keybindings
" buffer keybindings
" buffer被改变过也可以直接切换到其他buffer
" set hidden
" 打开上一个buffer的内容
" nnoremap <leader>bp :bp<CR>
" 打开下一个buffer的内容
" nnoremap <leader>bn :bn<CR>
" Delete buffer winout close window
:nnoremap <leader>bd :vsc File.Close<CR>
" Delete buffer except current one
" nnoremap <leader>bD :BufOnly<CR>
" Delete Buffer and window, 与<leader>wx 效果相同；
" nnoremap <leader>bx :bd<CR>
" End buffer keybindings

:nnoremap <leader>tn :vsc Window.NextTab<CR>
:nnoremap <leader>tp :vsc Window.PreviousTab<CR>

" quickfix keybindings
" open quickfix window
:nnoremap <leader>co :vsc View.ErrorList<CR>
" close quickfix window
" nnoremap <leader>cq :cclose<CR>
" goto next quickfix item
:nnoremap <leader>cn :vsc View.NextError<CR>
" goto previous quickfix item
:nnoremap <leader>cp :vsc View.PreviousError<CR>

:nnoremap gd <C-]>
" format code
:nnoremap <leader>m= :vsc Edit.FormatDocument<CR>
:vnoremap <leader>m= :vsc Edit.FormatSelection<CR>
:nnoremap <leader>mr :vsc Refactor.Rename<CR>
:vnoremap <leader>mr :vsc Refactor.Rename<CR>

" find in files
:nnoremap <leader>ss :vsc Edit.FindInFiles<CR>
:nnoremap <leader>sr :vsc Edit.ReplaceInFiles<CR>
" comment
:nnoremap <leader>m/ :vsc Edit.ToggleLineComment<CR>
:vnoremap <leader>m/ :vsc Edit.ToggleBlockComment<CR>
:nnoremap <leader>mf :vsc Edit.FindAllReferences<CR>
